ARG BASE_IMAGE="python:3.12-slim-bookworm"

FROM $BASE_IMAGE

#
# Update pip
#
RUN pip install --upgrade pip

#
# Install basic utilities
#
RUN apt-get update && apt-get install -y \
    git \
    libopenblas-dev \
    libopenmpi-dev \
    libomp-dev \
    procps \
    curl \
    gnupg \
    netcat-openbsd \
    rclone \
    wget \
    bc \
    ca-certificates \
    vim-common \
    && rm -rf /var/lib/apt/lists/*

#
# Install TORCH TPU
#
RUN --mount=type=secret,id=google_token \
    --mount=type=cache,target=/root/.cache/pip \
    export GOOGLE_ACCESS_TOKEN=$(cat /run/secrets/google_token) && \
    pip install \
    --pre \
    --index-url "https://oauth2accesstoken:${GOOGLE_ACCESS_TOKEN}@us-python.pkg.dev/ml-oss-artifacts-transient/torch-tpu-virtual-registry/simple/" \
    torch_tpu

CMD ["/bin/bash"]
